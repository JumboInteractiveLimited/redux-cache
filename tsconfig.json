{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"declaration": true,
		"outDir": "./lib",
		"skipLibCheck": true,
		"sourceMap": true,
		"types": [
         "node",
         "jasmine",
         "jest"
		],
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"src/__tests__/**/*"
	]
}